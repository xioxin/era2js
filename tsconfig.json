{
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "types"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "none",
    "target": "esnext",
    "allowJs": true
    }
}